<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timejh.tagmemo_java.group.GroupFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_groupmemo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        tools:listitem="@layout/item_group" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        style="@style/FloatStyle.Menu">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_edit"
            android:src="@android:drawable/ic_menu_edit"
            fab:fab_label="edit"
            style="@style/FloatStyle.Button" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add_group"
            android:src="@drawable/folder_add"
            fab:fab_label="add folder"
            style="@style/FloatStyle.Button" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add_memo"
            android:src="@drawable/memo_add"
            fab:fab_label="add memo"
            style="@style/FloatStyle.Button" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
